


Filter by Bodypart: 

<%= form_tag(exercises_path, method: :get) do  %>
 		<%= collection_select :exercise, :bodypart, Exercise.unique_bodyparts, :bodypart, :bodypart  %>	
 		<%= submit_tag "Filter Exercises" %>
 <% end %>

<br>

 <%= form_tag(exercises_path, method: :get) do %>
 		<%= hidden_field_tag :user_id, current_user.id %>
 		<%= submit_tag "Show My Exercises" %>
 <% end %>

 <br><br>   

<% if params[:exercise].nil? %>
	<h1>All Exercises:</h1>
<% else %>	
	<h1><%= "#{params[:exercise][:bodypart]} Exercises:" %></h1>
<% end %>

<br><br>

<div class="info">
<% @exercises.each do |exercise| %>

	<h5><%= exercise.name %></h5>

<% end %>

</div>