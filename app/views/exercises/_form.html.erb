<%= form_for(exercise) do |f| %>
		
		<div class="form-group">
			Exercise Name: <%= f.text_field :name, class:'form-control' %>
		</div>

		<div class="form-group">
			Bodypart worked: <%= collection_select :exercise, :bodypart, Exercise.unique_bodyparts, :bodypart, :bodypart, class:'form-control' %>
		</div>

		<div class="form-group">
			Sets: <%= f.number_field :sets, class:'form-control' %>
		</div>

		<div class="form-group">
			Reps: <%= f.number_field :reps, class:'form-control' %>
		</div>
		<%= f.hidden_field :workout_id, value:workout.id %>
		<%= f.submit "Add to Workout" %>
		
<% end %>