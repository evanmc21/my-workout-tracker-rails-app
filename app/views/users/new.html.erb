<div class="container">

<h1>Create Your Account</h1>
<%= form_for(@user) do |f| %>
		<div class='form-group'><h4>Name:</h4> <%= f.text_field :name, class:'form-control' %></div>
		<div class='form-group'><h4>Email:</h4> <%= f.text_field :email, class:'form-control' %></div>
		<div class='form-group'><h4>Password:</h4> <%= f.password_field :password, class:'form-control' %></div>
		<div class='form-group'><h4>Confirm Password:</h4> <%= f.password_field :password_confirmation, class:'form-control' %></div>
		<div class='form-group'><%= f.submit %></div>
<% end %>
  
</div>


