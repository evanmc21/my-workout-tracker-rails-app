<div class="container">

<h1>Login to Your Account</h1>
<%= form_for(@user) do |f| %>
		
		<div class='form-group <%= 'alert' if @user.errors[:email].any? %>'><h4>Email:</h4> <%= f.email_field :email, class:'form-control' %></div>
		
		<div class='form-group <%= 'alert' if flash[:message] || @user.errors[:password].any? %>'><h4>Password:</h4> <%= f.password_field :password, class:'form-control' %></div>
		
		<div class='form-group'><%= f.submit %></div>
<% end %>
  
</div>


