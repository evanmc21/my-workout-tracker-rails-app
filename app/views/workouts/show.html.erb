<div class="container">

	<h1><%= "#{@workout.bodypart} - #{@workout.weekday}, #{@workout.date.mon}/#{@workout.date.day}/#{@workout.date.year}" %></h1>

	<br>

	<h3>Comments: <%= @workout.comments %></h3>

	<br>

	<h2>Exercises:</h2>
		
	<% @workout.exercises.each.with_index(1) do |exercise, i| %>

		 <h5><strong> <%=  link_to "#{i}. #{exercise.name}", edit_exercise_path(exercise) %>	</strong> </h5>
	 			<p> 	Sets: <%= exercise.sets unless exercise.nil?%> </p>
			 	<p>	  Reps: <%= exercise.reps unless exercise.nil?%> </p>
				 
	<% end %>



	<p>*** click Exercise name to edit. ***</p>



<%= link_to "Edit Workout", edit_user_workout_path(@workout.user, @workout) %>

<br><br><br>

<h2>Add an Exercise: </h2>

<%= render partial:'exercises/form', locals:{exercise: @exercise, workout: @workout} %>
		  

<%= form_tag(user_workout_path(@workout.user, @workout),method: :delete) do %>
		<%= submit_tag "Delete This Workout" %>
<% end %>

</div>	